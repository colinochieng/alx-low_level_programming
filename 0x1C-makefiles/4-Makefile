CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: clean oclean fclean re

clean :
	$(RM) *~ $(NAME)

oclean : 
	$(RM) $(OBJ)

fclean : clean oclean

re : oclean all

